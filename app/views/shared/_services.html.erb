<div class="album py-5 bg-white">
  <div class="container">
  <div class="row">
    <% Service.categories.each do |category| %>
      
      
      <% @services.select{ |s| s.category == category[0] }.each do | fs | %>
        <div class="col" style="align:center;">
        <div class="card" style="width:300px;">
          <%= image_tag "#{category[0]}.png", class:"card-img-top" %>
          <div class="card-body" style="text-align:center;">
            <h4 class="card-title" ><%= link_to fs.category, service_path(fs) %></h4>
            <p class="card-text"><%= fs.name%></p>
            <%= link_to "Details", service_path(fs), class: 'btn btn-outline-primary' %>
          </div>
            
        </div>
        <p class="font-small blue-text d-flex justify-content-end">
        </div>
      <% end %>
      
      
    
    <% end %>
    </div>
  </div>
</div>