<div class="album py-5 bg-white">
  <div class="container">
    <div class="row">
      <% Service.categories.each do |category| %>


      <% @services.select{ |s| s.category == category[0] }.each do | fs | %>
      <div class="col" style="align:center;">
        <div class="card bg-white" style="width:300px;">
          <div class="card-body text-light" style="text-align:center;">
            <%= link_to fs.category,  service_path(fs), class:"btn card_header" %>
          </div>
          <%= image_tag "#{category[0]}.png", class:"card-img-bottom", style:"height:400px;" %>
        </div>
        <p class="font-small blue-text d-flex justify-content-end">
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>