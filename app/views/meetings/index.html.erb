
<% if @meetings.count > 0 && current_user.id == @meetings[0].professional.user_id %>
<div class="container">
<p id="notice"><%= notice %></p>
<h1>Upcoming Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Professional</th>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.professional.first_name %> <%= meeting.professional.last_name %></td>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%end%> 
