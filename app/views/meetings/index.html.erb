
<div class="container-div">
<p id="notice"><%= notice %></p>
<h1>Upcoming Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Professional</th>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% !@meetings.nil? && @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.professional.first_name %> <%= meeting.professional.last_name %></td>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        
        <td> <a href="<%= meeting_path(meeting) %>" class="btn btn-primary">Let's poWow</a> </td>
        <td> <a href="<%= edit_meeting_path(meeting) %>" class="btn btn-primary">Edit</a> </td>
        <td><%= link_to 'Cancel Meeting', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

