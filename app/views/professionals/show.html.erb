<main role="professional" class="container">
<section class="home_banner_area">
  <div class="banner_inner">
    <div class="container">
      <div class="row align-items-center justify-content-between">
        <div class="col-lg-6">
          <div class="banner_content">
            <h3>Hey There !</h3>
            <h1 class="text-uppercase">I am <%= @professional.first_name %> <%= @professional.last_name %></h1>
            <h5 class="text-uppercase"><%= @professional.description %></h5>
            <a class="primary_btn" href="#"><span>See My Work</span></a>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="home_right_img">
            <div>Profile Picture goes here</div>
            <img class="img-fluid" src="img/banner/home-right.png" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</main>