<!-- Page Section -->
<section class="pw-page">

  <!-- Page Section - Header -->
  <header class="pw-page__header pw-home-header">
    <%# <h1 class="pw-page__title"> %>
    <%# <%= image_tag "logo_transparent.png", class:"pw-home-header-logo", alt:"Powow" %>
    <%# <span class="pw-sr-only">Powow</span> %>
    <%# </h1> %>
    <div class="container">
      <div class="pw-home-highlight">
        <h1 class="pw-home-highlight__title"><span class="pw-home-highlight__title-hl">Find mentors</span> <br>and level up your skills</h1>
        <p class="pw-home-highlight__desc">Pay per <strong>powow</strong> and effectively achieve fluency</p>
        
        <!-- Search form -->
        <%= form_tag(services_path, :method => "get", class: 'pw-main-search') do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], placeholder: "What do you want a mentor for?", class: "pw-main-search-input" %>
          <div class="input-group-btn">
            <%= button_tag "search", :class => 'pw-btn pw-btn--search btn material-icons',:name => nil%>
          </div>
        </div>
        <% end %>

        <p class="pw-home-highlight__caption"><strong>Powow</strong> - a conference or meeting for discussion</p>
      </div>
    </div>
  </header>

  <!-- Page Section - Content -->
  <div class="pw-page__content pw-page__content--no-margin">

    <!-- About section -->
    <section class="pw-generic-section pw-generic-section--padded">
      <div class="container">
        <header class="pw-generic-section__header">
          <h2 class="pw-generic-section__title">Why do you need a mentor?</h2>
        </header>
        <ul class="pw-home-why row">
          <li class="pw-home-why__item pw-home-why__item--gains col-sm-6 col-md-3">
            <span class="pw-home-why__item-desc">Achieve personal or professional career gains</span>
          </li>
          <li class="pw-home-why__item pw-home-why__item--ideas col-sm-6 col-md-3">
            <span class="pw-home-why__item-desc">Gain new perspectives and fresh ideas</span>
          </li>
          <li class="pw-home-why__item pw-home-why__item--acomplish col-sm-6 col-md-3">
            <span class="pw-home-why__item-desc">Challenge yourself and accomplish more</span>
          </li>
          <li class="pw-home-why__item pw-home-why__item--strategies col-sm-6 col-md-3">
            <span class="pw-home-why__item-desc">Develop strategies and evaluate opportunities</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- Services section -->
    <section class="pw-generic-section pw-generic-section--padded pw-generic-section--bg3">
      <div class="container">
        <header class="pw-generic-section__header">
          <h2 class="pw-generic-section__title">Services</h2>
        </header>
        <%= render "shared/services" %>
      </div>
    </section>
  </div>
</section>