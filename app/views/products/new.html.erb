<!-- Page Section -->
<section class="pw-page">

  <!-- Page Section - Header -->
  <header class="pw-page__header pw-page__header--bg2">
    <div class="container">
      <h1 class="pw-page__title">New Product</h1>
    </div>
  </header>

  <!-- Page Section - Content -->
  <div class="pw-page__content">

    <!-- Services List -->
    <div class="container">
      <div class="pw-form mb-5">

        <%= form_with scope: :product, url: products_path, local: true do |form| %>
        
        TODO
          <%=  @pro %>
          <div class="pw-form__group md-form">
            <label for="pwFormName">Name</label>
            <input type="text" id="pwFormName" class="form-control">
          </div>
          <div class="pw-form__group md-form">
            <label for="pw-form-name2">Name</label>
            <input type="text" id="pw-form-name2" class="form-control" placeholder="First name">
          </div>
          <div class="pw-form__group md-form">
            <%= form.label :'Name' %>
            <%= form.text_field :name %>
          </div>
          <div class="pw-form__group md-form">
            <%= form.label :'Target Audience' %>
            <%= form.text_field :target_audience %>
          </div>
          <div class="pw-form__group md-form">
            <%= form.label :Description %>
            <%= form.text_area :description %>
          </div>
          <div class="pw-form__group md-form">
            <%= form.label :'Summary' %>
            <%= form.text_area :summary %>
          </div>
          <div class="pw-form__group md-form">
            <%= form.label :'Additional Details' %>
            <%= form.text_area :label %>
            <%= form.text_area :details %>
          </div>
          <div class="pw-form__group md-form">
            <%= form.label :'Price' %>
            <%= form.text_area :price %>
          </div>
          <div class="pw-form__footer">
            <!--<%= form.submit %>-->
            <%= submit_tag "Add Product", :class => 'pw-btn pw-btn--default btn waves-effect' %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</section>